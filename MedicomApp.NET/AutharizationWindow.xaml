<Window x:Class="MedicomApp.NET.AutharizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicomApp.NET"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="500" WindowStartupLocation="CenterScreen"
        Icon="/imgs/icon.ico">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/imgs/crest.png" Width="200"/>
            <StackPanel Width="300" Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="0,20,0,0" >
                    <Label Content="Логин: " Height="30"/>
                    <Label Content="Пароль: "/>
                </StackPanel>

                <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                    <TextBox x:Name="loginTextBox" Width="230" Height="25"/>
                    <PasswordBox x:Name="passwordTextBox" Width="230" Height="25" Margin="0,5,0,0"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="loginButtin" Content="Войти" Margin="0,10,0,0" Click="loginButtin_Click"/>
        </StackPanel>
    </Grid>
</Window>
