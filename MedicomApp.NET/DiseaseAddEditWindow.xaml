<Window x:Class="MedicomApp.NET.DiseaseAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MedicomApp.NET"
        mc:Ignorable="d"
        Title="Болезнь" Height="450" Width="800"
        Loaded="Window_Loaded" Icon="/imgs/icon.ico">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <Label Content="Название:" Height="30"/>
                    <Label Content="Описание:" Height="30" Margin="0,15,0,0"/>
                </StackPanel>
                <StackPanel>
                    <TextBox x:Name="nameTextBox" Width="200" Height="30"/>
                    <TextBox x:Name="descTextBox" Width="200" Height="30" Margin="0,15,0,0"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="addEditDiseaseButton" Content="Добавить" Click="addEditDiseaseButton_Click" Margin="0,10,0,0"/>
            <Button x:Name="exitButton" Content="Назад" Margin="0,10,0,0" Click="exitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
